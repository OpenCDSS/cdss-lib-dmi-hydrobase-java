<project name="HydrobaseDMI" default="compile-java" basedir="../">
    
    <import file="../../rtibuild/common-build.xml"/>
    
    <!-- @revisit probably not needed anymore -->
    <target name="debug" depends="compile-java">
        <nbjpdastart addressproperty="jpda.address" name="workflowapp" transport="dt_socket">
            <classpath path="${run.classpath}"/>
        </nbjpdastart>
        <java jvm="${jdk.home}/bin/java" classname="rti.workflow.editor.gui.BasicWorkflowApp" fork="true">
            <classpath path="${run.classpath.computed}"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=none"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
